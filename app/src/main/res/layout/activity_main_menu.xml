<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/color"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main_menu">


    <com.jackandphantom.circularimageview.CircleImage
        android:id="@+id/circleImage"
        android:layout_width="270dp"
        android:layout_height="224dp"
        android:src="@drawable/foodies"
        app:add_shadow="true"
        android:layout_gravity="center"
        app:border_color="#ed2e2e"
        app:border_width="3dp"
        app:shadow_color="#a10909"
        app:shadow_radius="20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="319dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/allrecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/buttondesign"
            android:fontFamily="serif"
            android:padding="10dp"
            android:paddingTop="10dp"
            android:text="All Recipe"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            android:id="@+id/categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/buttondesign"
            android:fontFamily="serif"
            android:padding="10dp"
            android:paddingTop="10dp"
            android:text="Categories"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            android:id="@+id/request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/buttondesign"
            android:fontFamily="serif"
            android:padding="10dp"
            android:paddingTop="10dp"
            android:text="Request for Recipe"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            android:id="@+id/random_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/buttondesign"
            android:fontFamily="serif"
            android:padding="10dp"
            android:paddingTop="10dp"
            android:text="Random Recipe"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            android:id="@+id/Exist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/buttondesign"
            android:fontFamily="serif"
            android:padding="10dp"
            android:paddingTop="10dp"
            android:text="Exists"
            android:textAlignment="center"
            android:textSize="15sp" />


    </LinearLayout>



</LinearLayout>